		echo "<pre>";
		print_r($students);
		echo "</pre>";

		asort($students);
		echo "Array sorted with asort():";
		echo "<pre>";
		print_r($students);
		echo "</pre>";

		arsort($students);
		echo "Array sorted with arsort():";
		echo "<pre>";
		print_r($students);
		echo "</pre>";
		?>
		
